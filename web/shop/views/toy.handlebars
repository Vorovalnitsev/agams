<div class= "col-md-6 text-left">
    <h1>{{toy.name}}</h1>
</div>
<div class="col-md">
    <div class="row">
        <div id="carouselPhotosControls" class="carousel slide col-sm-4" data-ride="carousel">
            <div class="carousel-inner">
                {{#each toy.photos}}
                    <div class="carousel-item {{#if active}}active{{/if}}">
                        <img class="d-block w-100 rounded" src="/img/toys/{{../toy._id}}/{{this.fileName}}" alt="...">
                        <div class="carousel-caption d-none d-md-block">
                            <h3></h3>
                            <p></p>
                        </div>
                    </div>
                {{/each}}
            </div>

            <a class="carousel-control-prev" href="#carouselPhotosControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselPhotosControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <div class="text-left col-sm-8 ">
            <h6>Возраст</h6>
            <p>{{toy.age}}</p>
            <h6>Описание</h6>
            <p>{{toy.description}}</p>
            <h6>Размер упаковки</h6>
            <p>{{toy.size.length}}x{{toy.size.width}}x{{toy.size.height}} см.
            </p>
            <h6>Вес</h6>
            <p>{{toy.weight}} гр.
            </p>
            <h6>Цена</h6>
            <p class="product-price-main ">{{toy.price}} руб.
                <img src="/icons/cart.svg" class="cart-img" id ="{{toy._id}}" action = "productIncrease1">
                <span id="spanToyQuantity{{toy._id}}">{{#if toy.quantity}}x{{/if}}{{toy.quantity}}</span>
            </p>

        </div>
    </div>
</div>

