<h1>Справочник возрастов</h1>
<button type="button" class="btn btn-primary" id="showAddAge">Добавить возраст</button>

<table class="table" id="ages">
    <thead>
    <th>id</th>
    <th>Возраст</th>
    </thead>
</table>

<div class="modal fade" id="editAgeModal" tabindex="-1" role="dialog" aria-labelledby="editAgeModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editAgeModalLabel">Новый возраст</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Закрыть">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="age-name" class="col-form-label">Возраст:</label>
                        <input type="text" class="form-control" id="nameAge">
                        <input type="hidden" id="idAge" value="">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                <button type="button" class="btn btn-primary" id="saveAge">Сохранить</button>
            </div>
        </div>
    </div>
</div>