<h1>Справочник продуктов</h1>
<button type="button" class="btn btn-primary" id="showAddProduct">Добавить продукт</button>

<table class="table" id="products">
    <thead>
    <th>id</th>
    <th>Название</th>
    <th>Артикул</th>
    <th>Возраст</th>
    <th>Цена</th>
    <th>Вес</th>
    </thead>
</table>

<div class="modal fade" id="editProductModal" tabindex="-1" role="dialog" aria-labelledby="editProductModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editProductModalLabel">Новый продукт</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Закрыть">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="product-name" class="col-form-label">Название:</label>
                        <input type="text" class="form-control" id="nameProduct">
                        <label for="product-vendorCode" class="col-form-label">Артикул:</label>
                        <input type="text" class="form-control" id="vendorCode">
                        <label for="product-description" class="col-form-label">Описание:</label>
                        <textarea type="text" class="form-control" id="description" rows = "7"></textarea>

                        <label for="product-age" class="col-form-label">Возраст:</label>
                        <select class="form-control" id="agesList">
                        </select>

                        <label for="product-price" class="col-form-label">Цена, руб.:</label>
                        <input type="text" class="form-control" id="price">
                        <label for="product-weight" class="col-form-label">Вес, г.:</label>
                        <input type="text" class="form-control" id="weight">
                        <label for="product-length" class="col-form-label">Длина, мм.:</label>
                        <input type="text" class="form-control" id="length">
                        <label for="product-width" class="col-form-label">Ширина, мм.:</label>
                        <input type="text" class="form-control" id="width">
                        <label for="product-height" class="col-form-label">Высота, мм.:</label>
                        <input type="text" class="form-control" id="height">

                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="visible">
                            <label class="form-check-label" for="visible">Виден в каталоге</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="hit">
                            <label class="form-check-label" for="hit">Хит</label>
                        </div>
                        <input type="hidden" id="idProduct" value="">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                <button type="button" class="btn btn-primary" id="saveProduct">Сохранить</button>
            </div>
        </div>
    </div>
</div>